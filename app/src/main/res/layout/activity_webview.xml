<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_toolbar_height"
        android:background="@color/colorPrimary"
        app:title=""
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/back_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/search_fragment_back_arrow" />

            <ImageView
                android:id="@+id/start_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_nav_favorites"
                />

            <TextView
                android:id="@+id/title_text_view"
                android:transitionName="@string/transition.webview_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/back_image_view"
                android:layout_toLeftOf="@id/start_image_view"
                android:gravity="center_vertical"
                android:text="Fake title"
                android:textColor="@color/white"
                android:textSize="18sp"
                fontPath="fonts/FranckerCYR-ExtraBold.otf"
                tools:ignore="MissingPrefix"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/fragment_vacancy_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:background="?attr/colorPrimary"
        style="?android:attr/progressBarStyleHorizontal"/>


    <WebView xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/web_view"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"/>

</LinearLayout>
