<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_request_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/custom_magnifier"/>

            <ImageView
                android:id="@+id/closeButton"
                android:layout_alignParentRight="true"
                android:src="@mipmap/search_request_close_button"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dialog_horizontal_margin"
            android:paddingRight="@dimen/dialog_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:text="Выберите город из списка ниже"
                android:textColor="@color/textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/search_dialog_spinner"
                    android:layout_marginBottom="10dp"
                    android:prompt="@string/dialog_search_spinner_prompt"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:theme="@style/TextLabelInputLayout"
                android:backgroundTint="@color/colorBackground"
                android:textAlignment="center"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/search_dialog_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dialog_search_edittext_hint"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <RelativeLayout
            android:background="@drawable/dialog_request_relativelayout_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/button_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dialog_horizontal_margin"
                android:layout_marginRight="@dimen/dialog_horizontal_margin"
                android:gravity="center"
                android:text="@android:string/ok"
                android:textColor="@color/textColorSecondary"
                android:background="@drawable/button_bg2"
                />

        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>