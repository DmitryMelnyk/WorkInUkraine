<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/item_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/letter_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="64dp"
            android:text="A"
            android:textColor="@color/green"
            fontPath="@string/font"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/request_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/letter_text_view"
            android:gravity="center"
            android:text="android developer"
            android:textSize="18sp"
            android:textColor="@color/green"
            fontPath="@string/font"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:id="@+id/request_city_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/request_text_view"
            android:gravity="center"
            android:text="Каменец-Подольский"
            android:textSize="18sp"
            android:textColor="@color/green"
            />

        <TextView
            android:id="@+id/new_vacancies_text_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/new_vacancies_bg"
            android:layout_marginTop="12dp"
            android:text="3"
            android:textSize="8sp"
            style="@style/SearchTextViewBold"
            android:layout_toRightOf="@+id/letter_text_view"
            android:layout_toEndOf="@+id/letter_text_view" />


    </RelativeLayout>
</android.support.v7.widget.CardView>