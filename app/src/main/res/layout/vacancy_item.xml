<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    >

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/vacancy_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_tab_vacancy_dark"/>

        <ImageButton
            android:id="@+id/popup_menu"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vacancy_more"
            android:background="@color/transparent"
            />

        <TextView
            android:id="@+id/body_text_view"
            android:transitionName="@string/transition.webview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="text"
            fontPath="fonts/FranckerCYR-ExtraBold.otf"
            tools:ignore="MissingPrefix"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/vacancy_icon"
            android:layout_toEndOf="@id/vacancy_icon"
            android:layout_toLeftOf="@id/popup_menu"
            android:layout_toStartOf="@id/popup_menu" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/body_text_view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:gravity="right"
            android:text="date"
            android:textColor="@color/grey_light"
            android:textSize="12sp"
            fontPath="fonts/FranckerCYR-ExtraBold.otf"
            tools:ignore="MissingPrefix"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>