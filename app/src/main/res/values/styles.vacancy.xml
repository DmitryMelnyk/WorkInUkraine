<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/fragment_toolbar_height</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FilterButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/dimen_24dp</item>
        <item name="android:paddingRight">@dimen/dimen_24dp</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:background">@drawable/stroke_button_white</item>
        <item name="android:minHeight">@dimen/dimen_0dp</item>
        <item name="android:minWidth">@dimen/dimen_0dp</item>
    </style>

    <style name="TextViewFilter" parent="android:Widget.Material.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>